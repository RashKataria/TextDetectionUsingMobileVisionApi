<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnLaunchScanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#000"
        android:text="@string/launch_scanner"
        android:padding="20dp"
        android:textColor="#FFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnLaunchScanner"
        android:layout_marginTop="15dp"
        android:text="Result"
        android:textColor="#000"
        android:textSize="20sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textEntrega"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textResult"
        android:layout_marginTop="15dp"
        android:textColor="#000"
        android:textSize="20sp"
        android:visibility="gone" />
    <TextView
        android:id="@+id/textDNI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textEntrega"
        android:layout_marginTop="15dp"
        android:textColor="#000"
        android:textSize="20sp"
        android:visibility="gone" />


</RelativeLayout>
